{
  "compilerOptions": {
    // Settings for Node.js >= 12.9.0
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,

    // Enable super strict setting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,

    // Function code never has to be compiled outside zeit/ncc and ts-jest
    "noEmit": true
  },
  "exclude": ["cdk.out"]
}